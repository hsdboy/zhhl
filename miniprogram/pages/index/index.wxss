/**index.wxss**/
@import "../iconfont.wxss";
.containerd {
  width: 100vw;

  padding: 0;
  box-sizing: border-box;
  background: linear-gradient(rgb(255, 255, 255), rgba(197, 225, 245, 0.863));
  float: left;
  margin: 0;
  /* overflow: auto; */
} 
.useract {
  width: 100%;
  height: 350rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.useract view:nth-of-type(1), .useract view:nth-of-type(3) {
  width: 90rpx;
  background: rgb(36, 221, 94);
  height:90rpx;
  border-radius: 50%;
  font-size: 13px;
  padding: 3px;
  text-align: center;
  box-sizing: border-box;
  color: white;
  box-shadow: 0 0 0 10rpx rgba(13, 236, 106, 0.233);
}

.userinfo-avatar {
  display: block;
  width: 170rpx;
  height: 170rpx;
  margin: 20rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 12rpx rgba(170, 170, 170, 0.37), 0 0 0 24rpx rgba(170, 170, 170, 0.116);
}

.userinfo-nickname {
  color: #aaa;
  display: block;
  text-align: center;
}

.user {
  width: 100%;
